@{
    ViewData["Title"] = "Privacy Policy";
}
<!--<h1>@ViewData["Title"]</h1>-->
<link href="~/css/stylesheet.css" rel="stylesheet" />
<main>
    <br /><br /><br />
    <form class="calculator">
        <div class="form-group">
            <label for="hours">Number of Hours:</label>
            <input type="number" id="hours" name="hours" min="0" required>
        </div>
        <div class="form-group">
            <label>Hourly Rate:</label>
            <input type="text" id="hourly-rate" name="hourly-rate" value="$60" readonly>
        </div>
        <div class="form-group">
            <button type="button" id="calculate-btn">Calculate Total</button>
        </div>
        <div class="form-group">
            <label for="total">Total Charge:</label>
            <input type="text" id="total" name="total" readonly>
        </div>
    </form>
</main>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="site.js"></script>
